{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Corruptions Perception Index (2012-2024)",
  "width":1200,
  "height":1200,
  "projection": {"type": "equalearth"},
  "layer": [
    {
        "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
     "data": {
            "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
      "mark": {"type": "geoshape",  "stroke": "lightgray"},
      "transform": [
        {
          "lookup": "properties.ISO_A3",        
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/data/ti-corruption-perception-index.csv"
            },
            "key": "Code",                    
            "fields": ["Corruption Perception Index"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Corruption Perception Index",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 20, 40, 60, 80, 100],
            "range": ["#fef0d9", "#fdd49e", "#fdbb84", "#fc8d59", "#e34a33", "#b30000"]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Corruption Perception Index", "type": "quantitative", "format": ".2f"}
        ]
      }
    }
  ]
}
