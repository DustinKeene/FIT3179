{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Corruption Perception Index (2024)",
  "width": 1000,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available for ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape", 
        "fill": "lightgray", 
        "stroke": "white",
        "strokeWidth": 0.8
      },
      "encoding": {
        "tooltip": [
          {"field": "note", "type": "nominal"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill": null, 
        "stroke": "lightgray", 
        "strokeWidth": 0.2
      }
    },
    {
      "data": {
        "url": "",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/data/ti-corruption-perception-index.csv"
            },
            "key": "Code",
            "fields": ["Corruption_perception_index", "Year"]
          }
        },
        {
          "filter": "datum.Year == 2024 && datum.Corruption_perception_index != null"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white", 
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Corruption_perception_index",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 20, 40, 60, 80, 100],
            "range": ["#b30000", "#e34a33", "#fc8d59", "#fdbb84", "#fdd49e", "#fef0d9"]
          },
          "legend": {
            "title": "Corruption Perception Index",
            "titleAnchor": "start",
            "titleAlign": "left",
            "orient": "bottom-left",
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Corruption_perception_index", "type": "quantitative", "title": "CPI Score", "format": ".1f"}
        ]
      }
    }
  ]
}