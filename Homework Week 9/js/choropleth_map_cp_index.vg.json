{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Corruption Perception Index (2012-2024)",
  "width": 1200,
  "height": 1200,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
 
      "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "fill":null, 
        "stroke": "lightgray"
      }
    },
    {

      "data": {
        "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Homework%20Week%209/data/ti-corruption-perception-index.csv"
            },
            "key": "Code",
            "fields": ["Corruption Perception Index"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white", 
        "strokeWidth": 0.5 
      },
      "encoding": {
        "color": {
          "field": "Corruption Perception Index",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0, 20, 40, 60, 80, 100],
            "range": ["#fef0d9", "#fdd49e", "#fdbb84", "#fc8d59", "#e34a33", "#b30000"]
          },
          "legend": {
            "title": "CPI Score",
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Corruption Perception Index", "type": "quantitative", "format": ".1f"}
        ]
      }
    }
  ]
}