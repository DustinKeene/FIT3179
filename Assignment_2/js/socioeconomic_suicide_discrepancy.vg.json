{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Age-standardized suicide rate by socioeconomic type for 2010 and 2023",
  "height": 400,
  "width": 375,
  
  "data": {
    "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Assignment_2/data/socioeconomic_standardised_suicide_rate.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "year",
        "oneOf": [2010, 2023]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "age_standardised_suicide_rate",
      "type": "quantitative",
      "title": "Age-Standardised Suicide Rate"
      
    },
    "y": {
      "field": "socioeconomic_type",
      "type": "nominal",
      "title": null,
      "axis": {
        "offset":10,
        "labelFontSize":12,
        "ticks": false,
        "minExtent": 50,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "socioeconomic_type",
          "type": "nominal"
        },
        "color": {"value": "#db646f"}
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "mark": {
        "type": "point",
        "filled": true
      },
      
      "encoding": {
        "color": {
          "field": "year",
          "type": "ordinal",
          "scale": {
            "domain": [2010, 2023],
            "range": ["#e6959c", "#911a24"]
          },
          "legend":{
           "title": "Year  ",
           "orient": "bottom-right",
           "offset":30
          }
        },
        "opacity": {"value": 1},
        "size": {
          "condition": {"param": "hover", "value": 250},
          "value": 100
        },

        
        "tooltip": [
          {"field": "socioeconomic_type", "type": "nominal", "title": "Socioeconomic Type"},
          {"field": "age_standardised_suicide_rate", "type": "quantitative", "title": "Suicide Rate"},
          {"field": "year", "type": "ordinal", "title": "Year"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "top",
        "dy": 15,
        "fontSize": 12,
        "fontWeight": "bold"
      },
      "transform": [
        {"filter": "(datum.year == 2023 && datum.socioeconomic_type == 'Quintile 1 (Poorest)') || (datum.year == 2023 && datum.socioeconomic_type == 'Quintile 5 (Richest)')"}
      ],
      "encoding": {
        "text": {
          "field": "age_standardised_suicide_rate",
          "type": "quantitative",
          "format": ".1f"
        }
      }
    }
  ],
  "config": {
    "background": "transparent",
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}