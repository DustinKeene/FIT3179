{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 650,
  "height": 300,
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/DustinKeene/FIT3179/refs/heads/main/Assignment_2/data/reddit_depression_dataset.csv",
      "format": {"type": "csv"}
    },
    {
      "name": "cloud",
      "source": "table",
      "transform": [
        {
          "type": "formula",
          "as": "text",
          "expr": "upper(datum.word)"
        },
        {
          "type": "formula",
          "as": "scaledCount",
          "expr": "log(datum.count+1)"
        },
        {
          "type": "wordcloud",
          "size": [625, 600],
          "text": {"field": "text"},
          "rotate": {"expr": "[-45, 0, 45][~~(random() * 3)]"},
          "font": "Helvetica Neue, Arial",
          "fontSize": {"field": "scaledCount"},
          "fontSizeRange": [8, 100],
          "padding": 4
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "text",
      "from": {"data": "cloud"},
      "encode": {
        "enter": {
          "text": {"field": "text"},
          "align": {"value": "center"},
          "baseline": {"value": "alphabetic"},
          "fill": {"scale": "color", "field": "text"},
          "font": {"value": "Helvetica Neue, Arial"},
          "fontSize": {"field": "fontSize"},
          "x": {"field": "x"},
          "y": {"field": "y"},
          "angle": {"field": "angle"}
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.3}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": ["#dc2626", "#d97706", "#92400e", "#f59e0b", "#f97316"]
    }
  ],
  "config": {
    "background": "transparent"
  }
}